{
    "name": "Digest-Plus",
    "version": "1.0",
    "description": "An extension to enhance the experience of navigating through *digest archives",
    "content_scripts": [
        {
            "matches": [
                "*://csharpdigest.net/digests/*", 
                "*://programmingdigest.net/digests/*", 
                "*://techleaddigest.net/digests/*",
                "*://aidigest.net/digests/*",
                "*://elixirdigest.net/digests/*",
                "*://reactdigest.net/digests/*"],
            "js": ["main.js"],
            "css": ["main.css"],
            "run_at": "document_end"
        }
    ],
    "browser_action": {
        "default_icon": "icons/icon48.png"
    },
    "icons": { 
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
       "128": "icons/icon128.png" 
    },
    "manifest_version": 3
  }